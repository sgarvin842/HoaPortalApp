                <li><a href="#">Shared Documents</a></li>
                <li><a href="#">Insurance</a></li>
                <li><a href="#">Architectural Reviews</a></li>
                <li><a href="#">Property Details</a></li>
                <li><a href="#">Account Profile</a></li>
                <li><a href="#">Help</a></li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="main-content">
            <div class="header"
                <header>
                    <div class="property-address">
                        <p>Property Address: <strong>Your Property Address Here</strong></p>
                    </div>
                    <div class="logout">
                        <a href="#">Log Out</a>
                    </div>
                </header>
            </div>
        
        <div class="content-section">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

