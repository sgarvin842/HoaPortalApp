@{
    ViewData["Title"] = "Directory";
}

<div class="container mt-5">
    <h2 class="mb-4">Directory</h2>

    <div class="card">
        <div class="card-body">
            <!-- Tabs for Board Members, Committee, Homeowners -->
            <ul class="nav nav-tabs" id="directoryTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="board-tab" data-bs-toggle="tab" href="#boardMembers" role="tab" aria-controls="boardMembers" aria-selected="false">Board Members</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="committee-tab" data-bs-toggle="tab" href="#committeeMembers" role="tab" aria-controls="committeeMembers" aria-selected="false">Committee</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="homeowners-tab" data-bs-toggle="tab" href="#homeowners" role="tab" aria-controls="homeowners" aria-selected="true">Homeowners</a>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content mt-4" id="directoryTabContent">
                <!-- Board Members Tab -->
                <div class="tab-pane fade" id="boardMembers" role="tabpanel" aria-labelledby="board-tab">
                    <p>No board members available.</p>
                </div>

                <!-- Committee Members Tab -->
                <div class="tab-pane fade" id="committeeMembers" role="tabpanel" aria-labelledby="committee-tab">
                    <p>No committee members available.</p>
                </div>

                <!-- Homeowners Tab (Default Active) -->
                <div class="tab-pane fade show active" id="homeowners" role="tabpanel" aria-labelledby="homeowners-tab">
                    <!-- Search Bar -->
                    <div class="d-flex justify-content-start mb-3">
                        <input type="text" class="form-control w-25" id="searchDirectory" placeholder="Search" />
                        <button class="btn btn-primary ms-2"><i class="bi bi-search"></i></button>
                    </div>

                    <!-- Directory Table -->
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    <input type="text" class="form-control" placeholder="Filter by Name">
                                </th>
                                <th>
                                    <input type="text" class="form-control" placeholder="Filter by Phone">
                                </th>
                                <th>
                                    <input type="text" class="form-control" placeholder="Filter by Email">
                                </th>
                                <th>
                                    <input type="text" class="form-control" placeholder="Filter by Address">
                                </th>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Address</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Sample Data -->
