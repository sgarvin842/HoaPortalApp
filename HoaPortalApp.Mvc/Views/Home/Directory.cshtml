                            <tr>
                                <td>Atom Ant</td>
                                <td>(555) 286-6268</td>
                                <td>Aant@hannahb.toon</td>
                                <td>241 Hannah Barbera Drive</td>
                            </tr>
                            <tr>
                                <td>Yogi Bear</td>
                                <td>(555) 987-6543</td>
                                <td>yogi@jellystone.com</td>
                                <td>240 Hannah Barbera Drive</td>
                            </tr>
                            <!-- Add more rows dynamically or from a database -->
                        </tbody>
                    </table>

                    <!-- Pagination -->
                    <div class="d-flex justify-content-between align-items-center">
                        <span>Showing 1 - 10 of 70 items</span>
                        <div>
                            <select class="form-select form-select-sm d-inline-block w-auto">
                                <option selected>10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                            </select>
                            items per page
                        </div>
                        <nav>
                            <ul class="pagination pagination-sm">
                                <li class="page-item"><a class="page-link" href="#">&#171;</a></li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">&#187;</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Implement search and filter logic if necessary
        const searchDirectoryInput = document.getElementById('searchDirectory');
        const tableRows = document.querySelectorAll('tbody tr');

        searchDirectoryInput.addEventListener('input', function () {
            const searchTerm = searchDirectoryInput.value.toLowerCase();
            tableRows.forEach(row => {
                const cells = row.querySelectorAll('td');
                let match = false;
                cells.forEach(cell => {
                    if (cell.textContent.toLowerCase().includes(searchTerm)) {
                        match = true;
                    }
                });
                row.style.display = match ? '' : 'none';
            });
        });
    });
</script>
